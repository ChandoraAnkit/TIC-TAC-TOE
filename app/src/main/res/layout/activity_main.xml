<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.example.ankit.tic_tac_toe.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:weightSum="3">
    <Button
        android:textSize="72dp"
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:textColor="#80ff00"/>
    <Button
        android:textSize="72dp"
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#00ffbf"

        android:layout_weight="1"/>
    <Button
        android:textSize="72dp"
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#bf00ff"
        android:layout_weight="1"/>

</LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
     <Button
         android:textSize="72dp"
         android:id="@+id/b4"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:textColor="#ffff00"
         android:layout_weight="1"/>
     <Button
         android:textSize="72dp"
         android:id="@+id/b5"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:textColor="#ff4000"
         android:freezesText="true"
         android:layout_weight="1"/>
     <Button
         android:textSize="72dp"
         android:id="@+id/b6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:textColor="#ff0000"
        android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button
            android:textSize="72dp"
            android:id="@+id/b7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#00ffff"
            android:layout_weight="1"/>

        <Button
         android:textSize="72dp"
         android:id="@+id/b8"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
            android:textColor="#00ff00"
         android:layout_weight="1"/>

      <Button
          android:textSize="72dp"
          android:id="@+id/b9"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="#ff0000"
          android:layout_weight="1"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        android:weightSize="6"
      <TextView
          android:layout_width="wrap_content"
          android:text="Total X won "
          android:textSize="24dp"
          android:layout_weight="2"
          android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/t1"
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:text="0"
              android:textSize="24dp"
              android:layout_height="wrap_content" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_weight="2"
          android:text="Total O won "
          android:textSize="24dp"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/t2"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:text="0"
          android:textSize="24dp"

          android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>